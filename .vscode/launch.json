{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attacha to NODE.js Debug Port",
            "request": "attach",
            "port": 9229,
            "type": "node",
            "skipFiles": [
                "<node_internals>/**", //faz o breakpoint evitar de entrar em arquivos internos do node
                "${workspaceFolder}/**/node_modules/**/*.js" //faz o breakpoint evitar de entrar em arquivos internos das libs
            ],
            "smartStep": true,
            "internalConsoleOptions": "openOnSessionStart",
            "restart": true
        }
    ]
}